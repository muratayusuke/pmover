<!DOCTYPE html>
<html>
<head>
  <title>Pmover</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <%- if @user -%>
      <%= @user.name %>
    <%- else -%>
      <%= link_to 'login', controller: 'dbx/auth', action: :login %>
    <%- end -%>
  </div>

<%= yield %>

</body>
</html>
